# =============================================================================
# Molly AI Assistant — Environment Configuration
# =============================================================================
# Copy to .env and fill in your values:  cp .env.example .env
#
# Claude Agent SDK uses your Max subscription — no ANTHROPIC_API_KEY needed.
# =============================================================================

# ---------------------------------------------------------------------------
# Core Identity
# ---------------------------------------------------------------------------
ASSISTANT_NAME=Molly
OWNER_NAME=Brian
OWNER_IDS=                          # comma-separated WhatsApp JIDs
CLAUDE_MODEL=opus                   # opus | sonnet | haiku

# ---------------------------------------------------------------------------
# API Keys — Required
# ---------------------------------------------------------------------------
GEMINI_API_KEY=                     # Google AI — judge, triage fallback, voice
GROQ_API_KEY=                       # Groq — judge (GPT-OSS 120B), reasoning

# ---------------------------------------------------------------------------
# API Keys — Optional
# ---------------------------------------------------------------------------
MOONSHOT_API_KEY=                   # Kimi K2.5 — triage, tie-breaker judge
XAI_API_KEY=                        # Grok — research tool
OPENAI_API_KEY=                     # Optional: codegen backend only

# ---------------------------------------------------------------------------
# Web UI
# ---------------------------------------------------------------------------
MOLLY_WEB_HOST=127.0.0.1
MOLLY_WEB_PORT=8080
MOLLY_WEB_TOKEN=                    # bearer token for web UI auth
MOLLY_GATEWAY_WEBHOOK_TOKEN=        # webhook auth for gateway

# ---------------------------------------------------------------------------
# Neo4j Graph Database
# ---------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# ---------------------------------------------------------------------------
# Time & Scheduling
# ---------------------------------------------------------------------------
MOLLY_TIMEZONE=America/New_York
MOLLY_QUIET_HOURS_START=22:00
MOLLY_QUIET_HOURS_END=07:00
MOLLY_WEEKLY_ASSESSMENT_DAY=sunday

# ---------------------------------------------------------------------------
# VIP Contacts (comma-separated names for priority bypass)
# ---------------------------------------------------------------------------
MOLLY_VIP_CONTACTS=

# ---------------------------------------------------------------------------
# Feature Flags — ON by default (set =false to disable)
# ---------------------------------------------------------------------------
# MOLLY_WHATSAPP_CHUNKING_ENABLED=true
# MOLLY_AUTO_CALENDAR_EXTRACTION_ENABLED=true
# MOLLY_AUTO_TASK_EXTRACTION_ENABLED=true
# MOLLY_SELF_EDIT_ENABLED=true
# MOLLY_PLUGIN_ENABLED=true

# ---------------------------------------------------------------------------
# Feature Flags — OFF by default (set =true to enable)
# ---------------------------------------------------------------------------
# MOLLY_ORCHESTRATOR_ENABLED=false       # Parallel worker decomposition
# MOLLY_CODE_LOOP_ENABLED=false          # Evolution self-modification loop
# MOLLY_DOCKER_SANDBOX_ENABLED=false     # Sandboxed code execution (needs Docker)
# MOLLY_VOICE_ENABLED=false              # Voice loop (needs Picovoice + Gemini)
# MOLLY_BROWSER_MCP_ENABLED=false        # Browser automation (needs npx)
# MOLLY_QWEN_LORA_ENABLED=false          # Local LoRA fine-tuning (needs GPU)

# ---------------------------------------------------------------------------
# Voice (only needed if MOLLY_VOICE_ENABLED=true)
# ---------------------------------------------------------------------------
PICOVOICE_ACCESS_KEY=
# GEMINI_LIVE_MODEL=gemini-2.5-flash-preview-native-audio

# ---------------------------------------------------------------------------
# Docker Sandbox (only needed if MOLLY_DOCKER_SANDBOX_ENABLED=true)
# ---------------------------------------------------------------------------
# MOLLY_DOCKER_SANDBOX_IMAGE=python:3.12-slim
# MOLLY_DOCKER_SANDBOX_MEMORY=256m

# ---------------------------------------------------------------------------
# Advanced — Worker Models (defaults are fine)
# ---------------------------------------------------------------------------
# MOLLY_WORKER_MODEL_FAST=claude-haiku-4-5
# MOLLY_WORKER_MODEL_DEFAULT=claude-sonnet-4-5
# MOLLY_WORKER_MODEL_DEEP=claude-opus-4-6

# ---------------------------------------------------------------------------
# Advanced — Track F & Contract Audit (progressive rollout)
# ---------------------------------------------------------------------------
